@model ProdutoModel
@{
    ViewData["Title"] = "Confirmação Apagar";
}

<div class="text-center">
    <h3>Realmente deseja apagar o produto ? @Model.Produto</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Produto" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>